<div class="box">
            <% if controller.controller_name == "projects" %>
              <a href="/projects/<%= project.id %>/edit" class="image fit"><img src="<%= project.thumbnail %>" alt="thumbnail" /></a>
            <% else %>
              <a href="<%= project.link %>" class="image fit"><img src="<%= project.thumbnail %>" alt="thumbnail" /></a>
            <% end %>
            <div class="inner">
              <h3><%= project.title %></h3>
              <p><%= project.description %></p>
              <% if controller.controller_name == "projects" %>
                <%= link_to "Edit", edit_project_path(project), class: "btn btn-warning btn-lg", style: "margin: 15px;" %>
                <%= link_to "Delete", project, method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, class: "btn btn-danger btn-lg" %>
                <p>Order Listed: <%= project.order_listed %></p>
              <% else %>
                <a href="<%= project.link %>" class="btn btn-primary btn-lg button fit" data-poptrox="<%= project.video_source == 'YouTube' ? 'youtube' : 'vimeo' %>,800x490">View</a>
              <% end %>
            </div>
          </div>